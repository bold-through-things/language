{
    // Dev Container configuration for 67lang project
    "name": "67lang Dev Container",
    "image": "mcr.microsoft.com/devcontainers/python:3.13",
    "postCreateCommand": "npm install -g @google/gemini-cli",
    "remoteEnv": {
        "GOOGLE_CLOUD_PROJECT": "build-quality-software-67"
    },
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            // this literally just for npm for Gemini
            "version": "20"
        },
        "ghcr.io/devcontainers-extra/features/deno-asdf:2": {},
        "ghcr.io/devcontainers/features/sshd:1": {
            // this literally just for Gemini, i need to ssh into the
            // codespace because the VSCode integrated terminal is atrocious
            "version": "latest"
        }
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "forwardPorts": [],
    "remoteUser": "vscode"
}