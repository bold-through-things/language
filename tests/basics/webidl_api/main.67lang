local myURL
	a URL
		string "https://example.com/path?query=123"

a print
	a myURL pathname

a print
	string "\n--- Testing TextEncoder/TextDecoder ---"

local encoder
	a TextEncoder

local decoder
	a TextDecoder

local text_tests
	list
		string "ASCII text"
		string "Unicode: ðŸ¦• Deno"
		string "Numbers: 42"

for text in
	a text_tests
do
	
	
	local bytes
		an encoder encode
			a text

	local restored
		a decoder decode
			a bytes

	a print
		string `Text: "`
		a text
		string `" -> Bytes: [`
		a bytes
		string `] -> Restored: "`
		a restored

a print
	string "\n--- Testing atob/btoa ---"

local testString
	string "Hello World"

local encodedString
	a btoa
		a testString

local decodedString
	a atob
		a encodedString

a print
	string "Original: "
	a testString
	string " -> Encoded: "
	a encodedString
	string " -> Decoded: "
	a decodedString
