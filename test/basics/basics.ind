while
	true
do
	local .name
		prompt
			string "hi what is ur name? "

	if
		eq
			.name
			string ""
	then
		break

	if
		either
			eq
				.name
				string "Alice"
			eq
				.name
				string "Bob"
	then
		print
			string "hello "
			.name
	else
		print
			string !who the fuck are you?!

while
	true
do
	local .n
		prompt
			string "sum all numbers from 1 to "

	if
		eq
			.n
			string ""
	then
		break

	local .sum
		int 0
	local .i
		int 1
	while
		asc
			.i
			.n
	do
		print
			concat
				string "i= "
				.i
				string ", sum= "
				.sum
		.sum
			add
				.sum
				.i
		.i
			add
				.i
				int 1
	print
		concat
			string "sum= "
			.sum
